{
  "name": "@shohojdhara/atomix",
  "version": "0.1.30",
  "description": "Atomix Design System - A modern component library for web applications",
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "style": "dist/index.css",
  "sass": "src/styles/index.scss",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./styles": {
      "import": "./dist/index.css",
      "require": "./dist/index.css"
    },
    "./css": "./dist/index.css",
    "./css/min": "./dist/index.min.css",
    "./scss": "./src/styles/index.scss",
    "./scss/modern": {
      "modern": "./src/styles/index.scss",
      "default": "./src/styles/index.scss"
    },
    "./themes": {
      "import": "./src/styles/themes/index.scss",
      "require": "./src/styles/themes/index.scss"
    },
    "./themes/css": "./dist/index.themes.css",
    "./themes/scss": "./src/styles/themes/index.scss",
    "./themes/settings": "./src/styles/01-settings/_settings.themes.scss",
    "./package.json": "./package.json"
  },
  "dependencies": {
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@vitejs/plugin-react": "^4.6.0",
    "phosphor-react": "^1.4.1",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "vite": "^5.4.19"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@babel/core": "^7.26.10",
    "@babel/plugin-transform-runtime": "^7.27.4",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.27.0",
    "@babel/runtime-corejs3": "^7.27.6",
    "@changesets/cli": "^2.29.5",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/addon-measure": "^8.6.14",
    "@storybook/addon-outline": "^8.6.14",
    "@storybook/cli": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/classnames": "^2.3.0",
    "@types/node": "^20.0.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "caniuse-lite": "^1.0.30001721",
    "classnames": "^2.5.1",
    "core-js": "^3.43.0",
    "cssnano": "^7.0.7",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "gh-pages": "^6.1.1",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.24",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-import": "^16.1.0",
    "postcss-preset-env": "^10.2.3",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.6",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "sass": "^1.89.2",
    "sass-embedded": "^1.87.0",
    "serve": "^14.2.1",
    "size-limit": "^11.0.0",
    "storybook": "^8.6.14",
    "terser": "^5.24.0",
    "tslib": "^2.6.2",
    "typescript": "^5.0.4",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "dev": "storybook dev -p 6006",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "build:components": "npm run build",
    "build:docs": "npm run build-storybook",
    "build:themes": "npm run build && npm run optimize:themes",
    "optimize:themes": "node scripts/optimize-themes.js",
    "validate:themes": "node scripts/validate-themes.js",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run ci",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "lint": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "ci": "npm run build && npm run check-format && npm run check-exports && npm run lint && npm run test && npm run validate:themes",
    "local-release": "changeset version && changeset publish",
    "preview:build": "npm run build-storybook && node scripts/prepare-deploy.js",
    "preview:serve": "npm run preview:build && npx serve deploy -p 3000"
  },
  "files": [
    "dist",
    "src/styles",
    "src/lib/utils/theme-manager.ts",
    "scripts/optimize-themes.js",
    "scripts/validate-themes.js",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "keywords": [
    "ui",
    "components",
    "design-system",
    "react",
    "javascript",
    "typescript",
    "css",
    "scss"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Shohojdhara/atomix.git"
  },
  "author": "liimonx <liimonx@shohojdhara.org>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Shohojdhara/atomix/issues"
  },
  "homepage": "https://github.com/Shohojdhara/atomix#readme",
  "peerDependencies": {
    "phosphor-react": "^1.4.1",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com/"
  }
}
